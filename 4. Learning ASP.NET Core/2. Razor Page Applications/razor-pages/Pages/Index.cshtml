@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["WelcomeMessage"] = "Welcome to my first Razor Pages app!";

    var thanksMessage = "Thanks for visiting!";

    string Greeting() {
        return $"{ViewData["WelcomeMessage"]} - {thanksMessage}";
    }
}

<div class="text-center">
    @* <p>@ViewData["WelcomeMessage"]</p>
    <p>@thanksMessage</p> *@

    @if (Model.ShowGreeting) {
        <p>@Greeting()</p>
    } else {
        <p>Greeting is not shown.</p>
    }

    <h2 class="display-6">Here are some other project types to explore:</h2>
    <ul>
        @foreach (var projectType in Model.OtherProjectTypes) {
            <li>@projectType</li>
        }
    </ul>
</div>

@section Scripts {
    <!-- #custom script section tag  -->
    <script type="text/javascript" src="~/js/site.js"></script>
}

@section Welcome {
    <h1 class="display-4 text-center">Welcome to Index.cshtml</h1>
}